<h1>Sign up!</h1>
<form action="<%= user_url %>" method="post">
  <%= authenticity_token %>

  <label>Email:
    <input type="text"
           value="<%= @user.email %>"
           name="user[email]">
  </label>
  <br>

  <label>Password:
    <input type="password"
           value=""
           name="user[password]">
  </label>
  <br>

  <button>Sign up</button>
</form>

<span>Already a user? Sign in <a href="<%= new_session_url %>">here</a>.</span>